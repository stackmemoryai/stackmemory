{
  "name": "@stackmemoryai/stackmemory",
  "version": "0.3.2",
  "description": "Lossless, project-scoped memory for AI tools",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "stackmemory": "dist/src/cli/index.js",
    "codex-sm": "dist/src/cli/codex-sm.js"
  },
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stackmemoryai/stackmemory.git"
  },
  "homepage": "https://github.com/stackmemoryai/stackmemory",
  "bugs": {
    "url": "https://github.com/stackmemoryai/stackmemory/issues"
  },
  "author": "StackMemory AI",
  "license": "MIT",
  "keywords": [
    "ai",
    "memory",
    "context",
    "llm",
    "mcp",
    "claude",
    "coding",
    "persistence"
  ],
  "scripts": {
    "setup": "npm install && npm run build && npm run init && node scripts/setup-claude-integration.js && node scripts/setup-alias.js",
    "setup:claude": "npm run build && ./scripts/setup-claude-integration.sh",
    "postinstall": "node scripts/setup-alias.js || true",
    "init": "node dist/scripts/initialize.js",
    "build": "node esbuild.config.js",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.build.json",
    "lint": "eslint src/**/*.ts scripts/**/*.ts",
    "lint:fix": "eslint src/**/*.ts scripts/**/*.ts --fix",
    "test:shared-context": "vitest run src/core/context/__tests__/shared-context-layer.test.ts src/core/context/__tests__/context-bridge.test.ts src/cli/__tests__/shared-context-integration.test.ts",
    "test:shared-context:watch": "vitest watch src/core/context/__tests__/shared-context-layer.test.ts src/core/context/__tests__/context-bridge.test.ts",
    "lint:oxc": "oxlint src scripts",
    "lint:fast": "oxlint src scripts && eslint src/**/*.ts scripts/**/*.ts",
    "lint:autofix": "node scripts/development/fix-lint-loop.cjs",
    "format": "prettier --write src/**/*.ts scripts/**/*.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:install": "npm run build && ./scripts/test-installation.sh",
    "test:shell": "./scripts/test-shell-integration.sh",
    "test:scenarios": "./scripts/test-installation-scenarios.sh",
    "test:pre-publish": "npm run test:install && npm run test:shell && npm run test:scenarios",
    "test:pre-publish:quick": "./scripts/test-pre-publish-quick.sh",
    "prepublishOnly": "npm run build && npm run test:pre-publish:quick",
    "quality": "npm run lint && npm run test:run && npm run build",
    "dev": "tsx watch src/mcp/mcp-server.ts",
    "mcp:start": "node dist/src/integrations/mcp/server.js",
    "mcp:dev": "tsx src/mcp/mcp-server.ts",
    "status": "node dist/scripts/status.js",
    "status:dev": "tsx scripts/status.ts",
    "linear:setup": "node dist/src/cli/index.js linear setup",
    "linear:status": "node dist/src/cli/index.js linear status",
    "linear:config": "node dist/src/cli/index.js linear config --show",
    "linear:sync": "node dist/src/cli/index.js linear sync",
    "linear:auto-sync": "node dist/src/cli/index.js linear auto-sync --start",
    "analytics": "node dist/src/cli/index.js analytics --view",
    "analytics:server": "node dist/src/cli/index.js analytics --port 3000 --open",
    "analytics:export": "node dist/src/cli/index.js analytics --export json",
    "tasks": "node dist/src/cli/index.js tasks list",
    "tasks:add": "node dist/src/cli/index.js task add",
    "search": "node dist/src/cli/index.js search",
    "log": "node dist/src/cli/index.js log",
    "context": "node dist/src/cli/index.js context show",
    "claude:setup": "node scripts/setup-claude-integration.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.958.0",
    "@browsermcp/mcp": "^0.1.3",
    "@google-cloud/storage": "^7.18.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/inquirer": "^9.0.9",
    "@types/pg": "^8.16.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "helmet": "^8.1.0",
    "inquirer": "^9.3.8",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.0",
    "msgpackr": "^1.10.1",
    "ngrok": "^5.0.0-beta.2",
    "ora": "^9.0.0",
    "pg": "^8.16.3",
    "puppeteer": "^24.34.0",
    "rate-limiter-flexible": "^9.0.1",
    "redis": "^5.10.0",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "tweetnacl": "^1.0.3",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.25",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@types/simple-peer": "^9.11.8",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.36.0",
    "prettier": "^3.7.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run lint:autofix",
      "prettier --write"
    ],
    "*.ts": [
      "vitest related --run"
    ]
  },
  "optionalDependencies": {
    "chokidar": "^5.0.0"
  }
}
